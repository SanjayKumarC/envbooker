<% @apps.each do |app| %>
  <tr>
    <td><%= link_to app.name, app, :remote => true %></td>
    <td><%= app.description %></td>
    <td>
      <div class="color-box" style="background-color: <%= app.color %>;"></div>
    </td>

    <td>
      <% if can? :update, app %>
        <%= link_to edit_app_path(app), title: "Edit", :data => {:toggle=>"tooltip"}, remote: true, class: "" do %>
          <span class="glyphicon glyphicon-edit"></span>
        <% end %>
      <% end %> 
    </td>
    <td>
      <% if can? :delete, app %>
        <%= link_to app_delete_path(app), remote: true, title: "Delete", class: "", :data => {:toggle=>"tooltip"} do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
      <% end %>
    </td>
  </tr>
<% end %>