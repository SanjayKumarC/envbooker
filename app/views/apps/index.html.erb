<%- model_class = App -%>

<div class="col-md-12">
  <div class="page-header">
    <%= link_to "", new_app_path, remote: true, class: "btn btn-primary fa fa-lg fa-plus button-text" %>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:description) %></th>
        <th><%= model_class.human_attribute_name(:color) %></th>

        <% if can? :update, @apps and can? :delete, @apps %>
          <th></th><th></th>
        <% end %>
      </tr>
    </thead>
    <tbody class="app-index">
      <%= render 'index' %>
    </tbody>
  </table>
</div>
