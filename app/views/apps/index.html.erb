<%- model_class = App -%>

<div class="col-md-6 col-md-offset-3">
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:description) %></th>
        <th><%= model_class.human_attribute_name(:color) %></th>

        <% if can? :update, @apps and can? :delete, @apps %>
          <th></th><th></th>
        <% end %>
      </tr>
    </thead>
    <tbody class="app-index">
      <%= render 'index' %>
    </tbody>
  </table>
  <%= link_to "New", new_app_path, remote: true, class: "btn btn-primary pull-right well button-text" %>
</div>

<div id="app-modal" class="modal" role="dialog"></div>
