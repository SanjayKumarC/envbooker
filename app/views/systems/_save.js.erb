<% if @system.errors.any? %>
  <% @system.errors.full_messages.each do |message| %>
    <% flash[:alert] = message %>
    $(".alert-danger").show(500);
    <% flash.discard %>
  <% end %>
<% else %>
  <% flash[:success] = "Success" %>
  $(".alert-success").html("<%= escape_javascript flash[:success]%> ");
  $(".alert-success").show(500);
  <% flash.discard %>
<% end %>

$("#system-modal").modal("hide");
$(".system-index").html("<%= escape_javascript(render 'index') %>");
$.bootstrapSortable(applyLast=true);
