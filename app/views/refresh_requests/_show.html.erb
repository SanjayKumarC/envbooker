
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Refresh Request</h3>
    </div>

    <div class="modal-body">
      <table class="table table-hover table-striped table-bordered table-condensed">
        <thead></thead>
        <tbody>
          <tr>
            <td><strong>Environment</strong></td>
            <td><%= @refresh_request.env.name %></td>
          </tr>
          <tr>
            <td><strong>Application</strong></td>
            <td><%= @refresh_request.app.name %></td>
          </tr>
          <tr>
            <td><strong>Date</strong></td>
            <td><%= @refresh_request.refresh_date %></td>
          </tr>
          <tr>
            <td><strong>Notes</strong></td>
            <td><%= @refresh_request.notes %></td>
          </tr>
          <tr>
            <td><strong>Status</strong></td>
            <td><%= @refresh_request.status %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="modal-footer">
      <%= link_to "Dismiss", "#", class: "btn", data: {dismiss: "modal"} %>
    </div>

  </div>
</div>
