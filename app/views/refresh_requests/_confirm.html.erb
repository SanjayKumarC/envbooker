<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3><%= "Complete Refresh Request" %></h3>
    </div>
    <div class="modal-body">
      <p>
        Are you sure? <br/>
        This will close the request and update the environment last refresh date information.
      </p>
    </div>
    <div class="modal-footer">
      <%= link_to "Yes", refresh_request_complete_path(@refresh_request), method: :post, remote: true, class: "btn btn-danger" %>
      <%= link_to "No", "#", class: "btn btn-primary", data: { dismiss: "modal" } %>
    </div>
  </div>
</div>
