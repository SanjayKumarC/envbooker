<div class="modal-dialog">
  <div class="modal-content">

    <div class="modal-header">
      <h3>Booking</h3>
    </div>

    <div class="modal-body">
      <table class="table table-bordered table-condensed table-hover table-striped">
        <thead></thead>
        <tbody>
          <tr>
            <td>Environment</td>
            <td><%= Env.find(@envbooking.env_id).name %></td>
          </tr>
          <tr>
            <td>Project</td>
            <td><%= Project.find(@envbooking.project_id).name %></td>
          </tr>
          <tr>
            <td>User</td>
            <td><%= User.find(@envbooking.user_id).name %></td>
          </tr>
          <tr>
            <td>App</td>
            <td>
              <%= App.find(@envbooking.app_id).name %>
            </td>
          </tr>
          <tr>
            <td>
              Start Date
            </td>
            <td>
              <%= @envbooking.start_date.strftime("%A, %d %B %Y") %>
            </td>
          </tr>
          <tr>
            <td>
              End Date
            </td>
            <td>
               <%= @envbooking.end_date.strftime("%A, %d %B %Y") %>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <strong>Notes: </strong><br/>
              <%= @envbooking.notes %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="modal-footer">
      <%= link_to "Dismiss", "#", class: "btn", data: {dismiss: "modal"} %>
    </div>

  </div>
</div>
