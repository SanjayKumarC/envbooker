<%- model_class = Envbooking -%>

<div class="col-md-8 col-md-offset-2">
  
  <div class="page-header">
    <h1>Bookings</h1>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:env_id) %></th>
        <th><%= model_class.human_attribute_name(:project_id) %></th>
        <th><%= model_class.human_attribute_name(:user_id) %></th>
        <th><%= model_class.human_attribute_name(:app_id) %></th>
        <th><%= model_class.human_attribute_name(:start_date) %></th>
        <th><%= model_class.human_attribute_name(:end_date) %></th>
        <% if can? :update, @envbookings and can? :delete, @envbookings %>
          <th></th><th></th>
        <% end %>
      </tr>
    </thead>
    <tbody class="envbooking-index">
      <%= render 'index' %>
    </tbody>
  </table>
  
  <%= link_to "New", new_envbooking_path, remote: true, class: "btn btn-primary pull-right well button-text" %>

</div>

<div id="envbooking-modal" class="modal fade"></div>