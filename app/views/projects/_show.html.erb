<div class="modal-dialog">
  <div class="modal-content">

    <div class="modal-header">
      <h3><%= @project.name %></h3>
    </div>

    <div class="modal-body">
      <table class="table table-hover table-striped table-bordered table-condensed">
        <thead>
        </thead>
        <tbody>
          <tr>
            <td>
              Project Name
            </td>
            <td>
              <%= @project.name %>
            </td>
          </tr>
          <tr>
            <td>
              Project Description
            </td>
            <td>
              <%= @project.description %>
            </td>
          </tr>
          <tr>
            <td>
              Project Colour
            </td>
            <td>
              <%= @project.color %>
            </td>
          </tr>
          <tr>
            <td>
            </td>
            <td>
              <div class="color-box" style="background-color: <%= @project.color %>;"></div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="modal-footer">
      <%= link_to "Dismiss", "#", class: "btn", data: {dismiss: "modal"} %>
    </div>

  </div>
</div>
