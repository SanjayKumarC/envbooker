<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3><%= "Delete Downtime Record" %></h3>
    </div>
    <div class="modal-body">
      <p>
        Are you sure?
      </p>
    </div>
    <div class="modal-footer">
      <%= link_to "Yes", downtime_path(@downtime), method: :delete, remote: true, class: "btn btn-danger" %>
      <%= link_to "No", "#", class: "btn btn-primary", data: { dismiss: "modal" } %>
    </div>
  </div>
</div>
