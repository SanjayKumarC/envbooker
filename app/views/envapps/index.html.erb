<%- model_class = Envapp -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:env_id) %></th>
      <th><%= model_class.human_attribute_name(:app_id) %></th>
      <% if can? :update, @envapps and can? :delete, @envapps %>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @envapps.each do |envapp| %>
      <tr>
        <td><%= Env.find_by_id(envapp.env_id).name %></td>
        <td><%= App.find_by_id(envapp.app_id).name %></td>
        <td>
          <% if can? :update, envapp %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_envapp_path(envapp), :class => 'btn btn-default btn-xs' %>
          <% end %>
          <% if can? :delete, envapp%>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      envapp_path(envapp),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_envapp_path,
            :class => 'btn btn-primary' %>
