<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'panel panel-default form col-md-6 col-md-offset-2 envbooking'}) do |f| %>

  <h3>Log in</h3>
  <br/>
  <br/>
  
  <div class="field">
    <%= f.label :email, :class => 'control-label'%><br />
    <%= f.email_field :email, autofocus: true, :tabindex => 1, :class => 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password, :class => 'control-label' %><br />
    <%= f.password_field :password, autocomplete: "off", :tabindex => 2, :class => 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, :tabindex => 3, :class => 'form-control' %>
      <%= f.label :remember_me, :class => 'control-label' %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", :tabindex => 4 %>
  </div>
  
  <%= render "devise/shared/links" %>

  <br/>
  <br/>

<% end %>
