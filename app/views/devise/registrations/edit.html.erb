<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="">

    <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <div class="control-group">
      <div class="control-">
      <%= f.label :email, :class => 'control-label' %><br />
      <div class="controls">
        <%= f.email_field :email, :class => 'form-control', autofocus: true %>
      </div>
      <%= f.error_span(@user[:email]) %>
    </div>

    <div class="control-group">
      <div class="control-">
      <%= f.label :name, :class => 'control-label' %><br />
      <div class="controls">
        <%= f.text_field :name, :class => 'form-control'  %>
      </div>
      <%= f.error_span(@user[:name]) %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="control-group">
      <div class="control-">
      <%= f.label :password, :class => 'control-label' %>  <i>(leave blank if you don't want to change it)</i><br />
      <div class="controls">
        <%= f.password_field :password, autocomplete: "off", :class => 'form-control'%>
      </div>
      <%= f.error_span(@user[:password]) %>
    </div>

    <div class="control-group">
      <div class="control-">
      <%= f.label :password_confirmation, :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control'%>
      </div>
      <%= f.error_span(@user[:password_confirmation]) %>
    </div>

    <div class="control-group">
      <div class="control-">
      <%= f.label :current_password, :class => 'control-label' %><i>  (we need your current password to confirm your changes)</i><br />
      <div class="controls">
        <%= f.password_field :current_password, autocomplete: "off", :class => 'form-control'%>
      </div>
      <%= f.error_span(@user[:current_password]) %>
    </div>

    <div class="actions">
      <%= f.submit "Update", :class => "btn btn-primary" %>
      <%= link_to "Cancel", "/", class: "btn", 'data-no-turbolink' => true %>
    </div>
  <% end %>
</div>
