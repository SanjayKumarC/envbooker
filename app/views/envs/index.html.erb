<div class="col-md-6 col-md-offset-3">
  <div class="page-header">
    <h1>Environments</h1>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Environment</th>
        <th>Description</th>
        <th>Level</th>
        <% if can? :update, @envs and can? :delete, @envs %>
          <th></th><th></th>
        <% end %>
      </tr>
    </thead>
    <tbody class="env-index">
      <%= render 'index' %>
    </tbody>
  </table>
  
  <%= link_to "New", new_env_path, remote: true, class: "btn btn-primary pull-right well button-text" %>
  
</div>
<div id="env-modal" class="modal fade" role="dialog"></div>