<%- model_class = Env -%>
<div class="panel panel-default col-md-6 col-md-offset-3">

  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:envlevel_id) %></th>
        <% if can? :update, @envs and can? :delete, @envs %>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @envs.each do |env| %>
        <tr>
          <td><%= env.name %></td>
          <td><%= Envlevel.find_by_id(env.envlevel_id).name %></td>
          <td>
            <% if can? :update, env %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_env_path(env), :class => 'btn btn-default btn-xs' %>
            <% end %>
            <% if can? :delete, env %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        env_path(env),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %>
              <% end %> 
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br/>
  <br/>
  <%= link_to t('.new', :default => t("helpers.links.new")), new_env_path, :class => 'btn btn-primary' %>
  <br/>
  <br/>

</div>