<div class="modal-dialog">
  <div class="modal-content">

    <div class="modal-header">
      <h3><%= @env.name %></h3>
    </div>

    <div class="modal-body">
      <strong>Environment Name: </strong><%= @env.name %><br/>
      <strong>Environment Description: </strong><%= @env.description %><br/>
      <strong>Environment Level: </strong><%= Envlevel.find_by_id(@env.envlevel_id).name %><br/>
      <br/>
      
      <table class="table table-striped table-bordered table-condensed">
        <thead>
          <th>Property</th>
          <th>Value</th>
        </thead>
        <tbody>
          <% @envproperties.each do |ep| %>
            <tr>
              <td><%= ep.key %></td>
              <td><%= ep.value %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="modal-footer">
      <%= link_to "Dismiss", "#", class: "btn", data: {dismiss: "modal"} %>
    </div>

  </div>
</div>
