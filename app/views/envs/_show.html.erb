<div class="modal-dialog">
  <div class="modal-content">

    <div class="modal-header">
      <h3><%= @env.name %></h3>
    </div>

    <div class="modal-body">
      <table class="table table-hover table-striped table-bordered table-condensed">
        <thead>
        </thead>
        <tbody>
          <tr>
            <td>
              Environment Name
            </td>
            <td>
              <%= @env.name %>
            </td>
          </tr>
          <tr>
            <td>
              Environment Description
            </td>
            <td>
              <%= @env.description %>
            </td>
          </tr>
          <tr>
            <td>
              Environment Level
            </td>
            <td>
              <%= Envlevel.find_by_id(@env.envlevel_id).name %>
            </td>
          </tr>
        </tbody>
      </table>

      <hr/>

      <table class="table table-striped table-bordered table-hover table-condensed">
        <thead>
          <th>Property</th>
          <th>Value</th>
        </thead>
        <tbody>
          <% @envproperties.each do |ep| %>
            <tr>
              <td><%= ep.key %></td>
              <td><%= ep.value %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="modal-footer">
      <%= link_to "Dismiss", "#", class: "btn", data: {dismiss: "modal"} %>
    </div>

  </div>
</div>
