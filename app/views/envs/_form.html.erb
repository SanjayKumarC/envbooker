<%= form_for @env, :html => { :class => "form-horizontal env" } do |f| %>

    <% if @env.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@env.errors.count, "error") %> prohibited this env from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @env.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@env[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :envlevel_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :envlevel_id, options_for_select(Envlevel.all.map{|el|[el.name, el.id]}), :class => 'form-control' %>
    </div>
    <%= error_span(@env[:envlevel_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            envs_path, :class => 'btn btn-default' %>

<% end %>
