<% if @booking_request.errors.any? %>
  <% if params[:action] == 'create' %>
    $("#booking_request-modal").html("<%= escape_javascript(render 'new') %>")
    $("#booking_request-modal").modal("show")
  <% else %>
    $("#booking_request-modal").html("<%= escape_javascript(render 'edit') %>")
    $("#booking_request-modal").modal("show")
  <% end %>
<% else %>
  <% flash[:success] = "Success" %>
  $(".alert-success").html("<%= escape_javascript flash[:success]%> ");
  $(".alert-success").show(500);
  <% flash.discard %>
  $("#booking_request-modal").modal("hide");
  $(".booking_request-index").html("<%= escape_javascript(render 'index') %>");
<% end %>
