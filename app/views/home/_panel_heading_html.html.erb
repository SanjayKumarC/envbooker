<script type="text/javascript">
  $(function() {
    $('#show_hide_filtering').click(function() {
      $('#filter_form').toggle();
    });
  });
</script>

<div id="show_hide_filtering">
  <a href="#"><i class="fa fa-fw fa-plus-square"></i> Filtering</a>
</div>

<div id="filter_form" class="well" style="display:none;">
  <form action="/" accept-charset="UTF-8" data-remote="true" method="post" class="form-inline">
    <div class="form-group">
      <label class="control-label" for="env_id"> Environment </label>
      <select name="env" id="env_id" class="input-small form-control ">
        <option value="All">All</option>
        <% @envs.each do |env| %>
          <option value="<%= env.name %>"><%= env.name %></option>
        <% end %>
      </select>
    </div>
    <div class="form-group">
      <label class="control-label" for="app_id"> Application </label>
      <select name="app" id="app_id" class="form-control input-small">
        <option value="All">All</option>
        <% @apps.each do |app| %>
          <option value="<%= app.name %>"><%= app.name %></option>
        <% end %>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
    <button type="submit" class="btn btn-default">Reset</button>
  </form>
</div>
