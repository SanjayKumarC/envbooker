<%= form_for @status, remote: true, :html => { :class => "form-horizontal status", style: "display:inline;" } do |f| %>

  <div class="modal-body">
    <% if @status.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@status.errors.count, "error") %> prohibited this status from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @status.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
    <% end %>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'form-control', :autofocus => true %>
      </div>
      <%= error_span(@status[:name]) %>
    </div>

    <div class="control-group">
      <%= f.label :status_type, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :status_type, :class => 'form-control' %>
      </div>
      <%= error_span(@status[:status_type]) %>
    </div>

  </div>

  <div class="modal-footer">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
  </div>

<% end %>
