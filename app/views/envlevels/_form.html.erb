<%= form_for @envlevel, :remote => true, :html => { :class => "form-horizontal envlevel", :style => 'display:inline;' } do |f| %>

  <div class="modal-body">
    <% if @envlevel.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@envlevel.errors.count, "error") %> prohibited this envlevel from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @envlevel.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
      <%= error_span(@envlevel[:name]) %>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
  </div>
  
<% end %>
