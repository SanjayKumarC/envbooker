<%- model_class = Envlevel -%>

<div class="col-md-6 col-md-offset-3">

  <div class="page-header">
    <h1>Levels</h1>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:description) %></th>
        <% if can? :update, @envlevels and can? :delete, @envlevels %>
          <th></th><th></th>
        <% end %>
      </tr>
    </thead>
    <tbody class="envlevel-index">
      <%= render 'index' %>
    </tbody>
  </table>
  
  <%= link_to "New", new_envlevel_path, remote: true, class: "btn btn-primary pull-right well button-text" %>
  
</div>
<div id="envlevel-modal" class="modal fade" role="dialog"></div>