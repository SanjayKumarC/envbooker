<%- model_class = Envlevel -%>

<div class="col-md-12">

  <div class="page-header">
    <%= link_to "", new_envlevel_path, remote: true, class: "btn btn-primary fa fa-lg fa-plus button-text" %>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:description) %></th>
        <% if can? :update, @envlevels and can? :delete, @envlevels %>
          <th></th><th></th>
        <% end %>
      </tr>
    </thead>
    <tbody class="envlevel-index">
      <%= render 'index' %>
    </tbody>
  </table>

</div>
<div id="envlevel-modal" class="modal fade" role="dialog"></div>
